{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "security:minimumReleaseAgeNpm",
    ":maintainLockFilesWeekly",
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "rangeStrategy": "bump",
  "schedule": ["* 8-13 * * 1"],
  "timezone": "Asia/Seoul",
  "minimumReleaseAge": "3 days",
  "npm": {
    "minimumReleaseAge": "3 days"
  }
}
